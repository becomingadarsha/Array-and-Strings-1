#include<stdio.h>
int main()
{
	int i,avg,n,j,k,a[100],sum;
	printf("Display number upto:");
	scanf("%d",&n);
	 printf("Enter the elements one by one \n");
	{
		for(i=0;i<n;i++)
		scanf("%d",&a[i]);
 }
	for(i=0;i<n;i++)
	{
		printf("a[%d]=%d\n",i,a[i]);
	}
	for(i=0;i<n;i++)
	{
		sum+=a[i];
	}
	avg=sum/n;
	printf("The sum is %d and average is %d",sum,avg);
	return 0;
}
